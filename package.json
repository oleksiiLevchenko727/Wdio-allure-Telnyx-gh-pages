{
  "name": "wdio_09_2025",
  "type": "module",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/browser-runner": "^9.20.1",
    "@wdio/cli": "^9.20.1",
    "@wdio/local-runner": "^9.20.1",
    "@wdio/mocha-framework": "^9.20.1",
    "@wdio/spec-reporter": "^9.20.0",
    "allure-commandline": "^2.34.1",
    "chromedriver": "^142.0.3",
    "cross-env": "^10.1.0",
    "geckodriver": "^6.1.0"
  },
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:chrome": "cross-env BROWSER=chrome npx wdio run ./wdio/wdio.runner.js",
    "test:firefox": "cross-env BROWSER=firefox npx wdio run ./wdio/wdio.runner.js",
    "test:all": "npm run test:chrome && npm run test:firefox",
    "test:file:chrome": "wdio run ./wdio.chrome.conf.js --spec",
    "test:file:firefox": "wdio run ./wdio.firefox.conf.js --spec",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  }
}
